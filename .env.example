# Telegram credentials
TG_API_ID=
TG_API_HASH=
TG_SESSION=
TG_SOURCE_CHANNELS=@source1,@source2
TG_TARGET_CHANNEL=@your_channel

# Affiliate link priority: API -> portal template -> prefix
# Option A: portal API (recommended)
AFFILIATE_API_ENDPOINT=
AFFILIATE_API_TOKEN=
AFFILIATE_API_TIMEOUT=5

# Option B: portal template (supports {url} placeholder)
AFFILIATE_PORTAL_LINK=

# Option C: legacy prefix
AFFILIATE_PREFIX=

# Optional: expand s.click shortlinks to real product URL before affiliating
RESOLVE_REDIRECTS=true
RESOLVE_REDIRECT_TIMEOUT=4

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1-mini

# Posting controls (blank = default; invalid/zero/negative values fall back with a warning)
DRY_RUN=false
MAX_POSTS_PER_RUN=5          # must be >=1
MESSAGE_COOLDOWN_SECONDS=5   # must be >=0 (0 disables cooldown)
MAX_MESSAGE_AGE_MINUTES=240  # must be >=1
MAX_MESSAGES_PER_CHANNEL=80  # must be >=1
MIN_VIEWS=1500               # must be >=0
REQUIRE_KEYWORDS=false
KEYWORD_ALLOWLIST=
KEYWORD_BLOCKLIST=
