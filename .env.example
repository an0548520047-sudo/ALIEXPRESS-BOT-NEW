# Required
TG_API_ID=123456
TG_API_HASH=abc123hash
TG_SESSION=telethon_string_session_here
TG_SOURCE_CHANNELS=@source1,@source2
TG_TARGET_CHANNEL=@your_target_channel
# You must set ONE of these (AFFILIATE_PORTAL_LINK is preferred):
# - AFFILIATE_PORTAL_LINK can include {url} placeholder that will be replaced with the encoded product URL.
# - AFFILIATE_PREFIX is the old-style deep-link prefix.
AFFILIATE_PORTAL_LINK=https://portals.aliexpress.com/deeplink?url={url}
AFFILIATE_PREFIX=
OPENAI_API_KEY=sk-your-openai-key

# Optional
OPENAI_MODEL=gpt-4.1-mini
MIN_VIEWS=1500
MAX_MESSAGES_PER_CHANNEL=80
DRY_RUN=false
MAX_POSTS_PER_RUN=5
MESSAGE_COOLDOWN_SECONDS=5
MAX_MESSAGE_AGE_MINUTES=240
KEYWORD_ALLOWLIST=
KEYWORD_BLOCKLIST=
